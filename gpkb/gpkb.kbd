(defcfg
  input  (device-file "/dev/SCcontroller")
  output (uinput-sink "Controller GP keyboard")
  cmp-seq slck
  allow-cmd true
)
(defsrc
      9           0
      lmeta       lctrl
      c           v
      up          a
  left  right   d   s
      down        f

          home

  1 2 3           q
  8 z 4         r x w   
  7 6 5           e
)
